<h2>Select a User</h2>
<%= image_tag "leaderboard_ad.png", width: "500", alt: "Leaderboard Ad" %>
<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to "#{user.username} (#{user.wins} wins)", user_play_path(user), class: "button" %>
    </li>
  <% end %>
</ul>
<%= link_to "Back", root_path, class: "button" %>
